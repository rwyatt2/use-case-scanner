{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start dev server",
      "type": "shell",
      "command": "npm run dev",
      "options": {
        "cwd": "${workspaceFolder}",
        "isBackground": true,
        "runOptions": { "instanceLimit": 1 }
      },
      "problemMatcher": {
        "pattern": { "regexp": "^$" },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "VITE",
          "endsPattern": "Local:.*http"
        }
      },
      "presentation": { "reveal": "always", "panel": "dedicated" }
    },
    {
      "label": "Open in system browser",
      "type": "shell",
      "command": "npm run open",
      "options": { "cwd": "${workspaceFolder}" },
      "presentation": { "reveal": "silent" }
    }
  ]
}
